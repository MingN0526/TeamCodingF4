@page
@model TeamCodingF4.Models.Account.LoginModel

@{
    ViewData["Title"] = "會員登入";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post" action="/account/login">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Email" class="form-label">帳號</label>
                    <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating">
                    <label asp-for="Password" class="form-label">密碼</label>
                    <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder=密碼 aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <br />
                        <input class="form-check-input" asp-for="RememberMe" />
                        記住我
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">登入</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">忘記密碼了嗎?</a>
                        <br />
                        <a href="/Account/register">註冊新帳號</a>
                        <br />
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">重新寄發認證信</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
