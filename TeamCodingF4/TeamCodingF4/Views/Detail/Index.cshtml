<!-- Breadcrumb Start -->
<div class="container-fluid">
    
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">首頁</a>
                    <a class="breadcrumb-item text-dark" href="#">物件</a>
                    <span class="breadcrumb-item active">物件資料</span>
                </nav>
            </div>
        </div>
    
    <!-- Breadcrumb End -->
    <!-- Shop Detail Start -->

    <div class="container-fluid pb-5" id="detailIndex">
        <div class="row px-xl-5" v-for="allHouseDetail in houseDetail">
            <div class="col-lg-5 mb-30">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" :src="allHouseDetail.estateImage[0].imagePath" alt="Image">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-7 h-auto mb-30">
                <div class="h-100 bg-light p-30">
                    <h3>{{allHouseDetail.tittle}}</h3>
                    <div class="d-flex mb-3">
                        <small class="pt-1"></small>
                    </div>
                    <h3 class="font-weight-semi-bold mb-4">${{allHouseDetail.price}}</h3>
                    <p class="mb-4">
                        {{allHouseDetail.message}}
                    </p>
                    <div class="d-flex mb-3">
                        <strong class="text-dark mr-3">房型</strong>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-1" name="size" checked>
                            <label class="custom-control-label" for="size-1">{{allHouseDetail.roomType.name}}</label>
                        </div>
                    </div>
                    <div class="d-flex mb-4">
                        <strong class="text-dark mr-3">地址</strong>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="color-5" name="color" checked>
                            <label class="custom-control-label" for="color-5">{{allHouseDetail.address}}</label>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">房東回覆 </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-pane-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="mb-4">產品名稱</h4>
                                    <div class="media mb-4">
                                        <img src="~/img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                        <div class="media-body">
                                            <h6>房東姓名<small> - <i>回覆時間</i></small></h6>
                                            <div class="text-primary mb-2">
                                            </div>
                                            <p>回覆內文</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h4 class="mb-4">回覆房東</h4>
                                    <small></small>
                                    <div class="d-flex my-3">
                                        <div class="text-primary">
                                        </div>
                                    </div>
                                    <form>
                                        <div class="form-group">
                                            <label for="message">你的回覆</label>
                                            <textarea id="message" cols="30" rows="5" class="form-control" required></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="name">姓名</label>
                                            <input type="text" class="form-control" id="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="email">信箱</label>
                                            <input type="email" class="form-control" id="email" required>
                                        </div>
                                        <div class="form-group mb-0">
                                            <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->

@section Scripts
    {
    <script>
        let app = new Vue({
            el: "#detailIndex",
            data: {
                houseDetail: "",
            },
            mounted: function () {
                let _self = this
                fetch("/api/detail/getallhousedetail")
                    .then(function (response) { return response.json() })
                    .then(function (result) {
                        console.log(result)
                        _self.houseDetail = result
                    })
            },
            methods: {

            },
        });
    </script>
}
