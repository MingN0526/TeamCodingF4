                                </select>
                            </div>
                            <div class="col-md-2 form-group">
                                <label>生日</label>
                                <input id="BirthDate" name="BirthDate" placeholder="2023/02/18" v-model="form.BirthDate" class="form-control" type="text" :disabled="mode == 'view'">
