                        <div class="row ">
                            <div class="col-md-4 form-group">
                                <label>姓名</label>
                                <input id="Name" name="Name" v-model="form.Name" class="form-control" :disabled="mode == 'view'">
                            </div>
                            <div class="col-md-3 form-group">
