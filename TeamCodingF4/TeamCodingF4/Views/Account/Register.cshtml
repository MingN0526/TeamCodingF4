@model TeamCodingF4.Models.Account.RegisterModel


<div id="Vuepage">
    <form name="registerPage" action="register" method="post">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h1>會員註冊</h1>
                <section>
                    <form id="account" method="post">
                        <h2>請註冊一個帳號</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <label asp-for="UserName" class="form-label">使用者名稱</label>
                            <input asp-for="UserName" class="form-control" autocomplete="username" placeholder="王小明" aria-required="true" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <label asp-for="Email" class="form-label">信箱</label>
                            <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <label asp-for="Password" class="form-label">密碼</label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder="密碼" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <label asp-for="ConfirmePassword" class="form-label">再次確認密碼</label>
                            <input asp-for="ConfirmePassword" class="form-control" autocomplete="current-password" placeholder="再次輸入密碼" aria-required="true" />
                            <span asp-validation-for="ConfirmePassword" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">註冊</button>
                        </div>
                        <div>
                            @*                    <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">重新寄發認證信</a>
                            </p>*@
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
