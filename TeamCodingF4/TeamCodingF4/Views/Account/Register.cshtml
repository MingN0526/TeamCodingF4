<div id="app">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>會員註冊</h1>
            <section>
                <h2>請註冊一個帳號</h2>
                <hr />
                <div class="text-danger"></div>
                <div class="form-floating">
                    <label name="Name" class="form-label">使用者名稱</label>
                    <input name="Name" id="Name" v-model="Name" class="form-control" autocomplete="username" placeholder="王小明" aria-required="true" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label name="Email"  class="form-label">信箱</label>
                    <input name="Email" id="Email" v-model="Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label name="Password" class="form-label">密碼</label>
                    <input name="Password" id="Password" v-model="Password" class="form-control" autocomplete="current-password" placeholder="密碼" aria-required="true" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label name="ConfirmePassword" class="form-label">再次確認密碼</label>
                    <input name="ConfirmePassword" id="ConfirmePassword" v-model="ConfirmePassword" class="form-control" autocomplete="current-password" placeholder="再次輸入密碼" aria-required="true" />
                    <span class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit"
                            v-on:click="DoRegister()"
                    class="w-100 btn btn-lg btn-primary">註冊</button>
                </div>
                <div>
                    @*                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">重新寄發認證信</a>
                    </p>*@
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let app = new Vue({
            el: '#app',
            data: {
                Name: "",
                Email: "",
                Password: "",
                ConfirmePassword: "",
            },
            methods: {
                DoRegister: function () {
                    let _self = this
                    if (this.Password == "" || this.Password != this.ConfirmePassword) {
                        alert("密碼未設定或密碼不相同");
                        return;
                    }

                    fetch('/api/Account/PostToRegister', {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            Name: this.Name,
                            Email: this.Email,
                            Password: this.Password,
                            ConfirmePassword: this.ConfirmePassword
                        })
                    }).then(function(response){
                        return response.json()
                    }).then(function(result){
                        console.log(result)
                        if(result.isOk==false){
                            swal(
                                '註冊結果', '信箱重複註冊或輸入格式不正確，請檢查。', 'error'
                            );
                        }
                        else
                        {
                            swal('註冊結果', '註冊成功，請至信箱收取認證信。', 'success')
                            
                        }
                    }).catch((error) => {
                        swal('註冊結果', '不知原因錯誤，請洽管理員。', 'error')
                    })
                }
            },
        })

        
    </script>
}
