                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <label>LDK</label>
                            <div class="row">
                                <span class="col-1">房:</span>
                                <input type="number" class="form-control col-2" />
                                <span class="col-1">廳:</span>
                                <input type="number" class="form-control col-2" />
                                <span class="col-1">衛:</span>
                                <input type="number" class="form-control col-2" />
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label>地址</label>
                            <div class="row">
                                <span class="col-1">市:</span>
                                <input type="text" class="form-control col-2" />
                                <span class="col-1">區:</span>
                                <input type="text" class="form-control col-2" />
                                <span class="col-1">路:</span>
                                <input type="text" class="form-control col-2" />
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <label>價格(NT)</label>
                            <input type="number" min="0" class="form-control" name="Price" id="Price" v-model="Price" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
