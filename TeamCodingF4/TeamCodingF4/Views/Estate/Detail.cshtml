                                <span class="col-2">汽車:</span>
                                <input type="number" value="0" class="form-control col-3" name="Car" id="Car" v-model="Car" />
                                <span class="col-2">機車:</span>
                                <input type="number" value="0" class="form-control col-3" name="Motorcycle" id="Motorcycle" v-model="Motorcycle" />
                            </div>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <div class="control-group">
                            <label>設備</label>
                            <div class="dropdown form-control">
                                <div class="item text">
                                    <label></label>
                                </div>
                                <div class="item form-check">
                                    <input type="checkbox" name="AirConditioner" id="AirConditioner" v-model="AirConditioner" />
                                    <label for="AirConditioner">冷氣</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="Television" id="Television" v-model="Television" />
                                    <label for="Television">電視</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="WetDry" id="WetDry " v-model="WetDry" />
                                    <label for="WetDry">乾溼分離</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="Balcony" id="Balcony" v-model="Balcony" />
                                    <label for="Balcony">陽台</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="WashingMachine" id="WashingMachine" v-model="WashingMachine" />
                                    <label for="WashingMachine">洗衣機</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="WaterDispenser" id="WaterDispenser" v-model="WaterDispenser" />
                                    <label for="WaterDispenser">飲水機</label>
                                </div>
                                <div class="item">
                                    <input type="checkbox" name="Refrigerator" id="Refrigerator" v-model="Refrigerator" />
                                    <label for="Refrigerator">冰箱</label>
                                </div>
                            </div>

                        </div>
                        <p class="help-block text-danger"></p>
                        <div class="control-group">
                            <label>租約期(月)</label>
                            <input type="number" min="1" class="form-control" name="Lease" id="Lease" v-model="Lease" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <label>條件</label>
                            <input type="text" class="form-control" />
                            <p class="help-block text-danger"></p>

                        </div>
                        <div class="control-group">
                            <label>照片</label>
                            <input type="file" class="form-control" name="EstateImage" id="EstateImage" multiple v-model="EstateImage" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <label>影片</label>
                            <input type="file" class="form-control" name="EstateVideo" id="EstateVideo" v-model="EstateVideo" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <label>其他資訊</label>
                            <textarea class="form-control" rows="8" name="message" id="message" placeholder="Message" v-model="message"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

