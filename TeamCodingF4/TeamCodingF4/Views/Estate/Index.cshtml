<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">首頁</a>
                <span class="breadcrumb-item active">我的物件</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid" id="app">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5" id="estateIndex">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>標題</th>
                        <th>房型</th>
                        <th>價格</th>
                        <th>雜費</th>
                        <th>坪數</th>
                        <th>其他</th>
                    </tr>
                </thead>
                <tbody class="align-middle" v-for="item in inf">
                    <tr>
                        <td class="align-middle">
                            {{item.tittle}}
                        </td>
                        <td class="align-middle">
                            {{item.roomType}}
                        </td>
                        <td class="align-middle">
                            {{item.price}}
                        </td>
                        <td class="align-middle">
                            {{item.miscellaneous}}
                        </td>
                        <td class="align-middle">
                            {{item.meters}}
                        </td>
                        <td class="align-middle">
                            <a href="/estate/detail">詳細資料</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        var app = new Vue({
            el: "#estateIndex",
            data: {
                inf: []
            },
            mounted: function () {
                let self = this;
                fetch(`/Api/EstateApi/Index`)
                    .then(function (response) { return response.json() })
                    .then(function (result) {
                        console.log(result)
                        self.inf = result
                    })
            },
            methods:{
                detail:function(){
                    fetch(`/eatate/detail`)
                }
            }
        })
    </script>
    }