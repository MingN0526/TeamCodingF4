@model IEnumerable<TeamCodingF4.Models.EstateModel>

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">首頁</a>
                <span class="breadcrumb-item active">我的物件</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>標題</th>
                        <th>房型</th>
                        <th>地址</th>
                        <th>價格</th>
                        <th>其他</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="" alt="" style="width: 50px;"> @Html.DisplayFor(modelItem => item.EstateTittle)</td>
                            <td class="align-middle"> @Html.DisplayFor(modelItem => item.RoomType)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Address)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.EststePrice)</td>
                            <td class="align-middle">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-times">
                                        <a asp-action="Delete" asp-route-id="@item.EstateId">Delete</a>
                                    </i>
                                </button>
                                <a asp-action="Edit" asp-route-id="@item.EstateId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.EstateId">Details</a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Subtotal</h6>
                        <h6>$150</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>$160</h5>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

