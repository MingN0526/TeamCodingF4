@model IEnumerable<TeamCodingF4.Models.EstateModel>

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">首頁</a>
                <span class="breadcrumb-item active">我的物件</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>標題</th>
                        <th>房型</th>
                        <th>地址</th>
                        <th>價格</th>
                        <th>照片</th>
                        <th>其他</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="" alt="" style="width: 50px;">
                                @Html.DisplayFor(modelItem => item.EstateTittle)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.RoomType)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.EstateImage)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.EststePrice)
                            </td>
                            <td class="align-middle">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-times">
                                        <a asp-action="Delete" asp-route-id="@item.EstateId">Delete</a>
                                    </i>
                                </button>
                                <a asp-action="Edit" asp-route-id="@item.EstateId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.EstateId">Details</a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>